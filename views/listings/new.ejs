<!-- This is the index page for listings where users can view all listings.
CRUD Operation: Read (we perform read operation here).
We also provide a button to create a new listing. -->

<% layout("/layouts/boilerplate") %>

  <div class="row">
    <div class="col-8 offset-2 mt-2">

      <h3>Create a New Listing</h3>
      <form method="POST" action="/listings">

        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input name="listing[title]" placeholder="enter title" type="text" class="form-control" />
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea name="listing[description]" placeholder="enter description" class="form-control"></textarea>
        </div>


        <div class="mb-3">
          <label for="image" class="form-label">Image</label>
          <input name="listing[image]" placeholder="enter image URL/Link" type="text" class="form-control" />
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" placeholder="enter price" type="number" class="form-control" />
          </div>

          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" placeholder="enter country" type="text" class="form-control" />
          </div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input name="listing[location]" placeholder="enter location" type="text" class="form-control" />
        </div>

        <button class="btn btn-dark add-btn mt-3 mb-3">Add</button>

      </form>
    </div>
  </div>